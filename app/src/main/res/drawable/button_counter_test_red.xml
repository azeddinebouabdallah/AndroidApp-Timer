<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >

            <gradient android:startColor="@color/colorButtonCounterStartRed"
                android:endColor="@color/colorButtonCounterEndRed"
                android:angle="90"></gradient>
            <corners android:radius="@dimen/buttonRaduis"></corners>

        </shape>
    </item>
    <item android:state_hovered="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >

            <gradient android:startColor="@color/colorButtonCounterEndRed"
                android:endColor="@color/colorButtonCounterStartRed"
                android:angle="90"></gradient>
            <corners android:radius="@dimen/buttonRaduis"></corners>

        </shape>


    </item>

</selector>